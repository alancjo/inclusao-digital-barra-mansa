<div class="max-w-2xl">
  <%= breadcrumb(['InÃ­cio', root_path], ['Mentores', mentors_path], [@mentor.full_name, nil]) %>
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-slate-900"><%= @mentor.full_name %></h1>
    <%= link_to 'Editar', edit_mentor_path(@mentor), class: 'inline-flex items-center rounded-md bg-slate-800 hover:bg-slate-700 text-white px-3 py-2 text-sm font-medium' %>
  </div>
  <div class="rounded-xl bg-white border border-slate-200 p-6 shadow-sm">
    <div class="flex flex-wrap items-center gap-3 mb-4">
      <span class="inline-block text-[11px] font-bold tracking-wide bg-slate-900 text-white px-3 py-1 rounded"><%= @mentor.expertise %></span>
      <% if @mentor.availability.present? %>
        <span class="text-[10px] uppercase tracking-wide font-semibold bg-brand-100 text-brand-700 px-2 py-1 rounded"><%= @mentor.availability %></span>
      <% end %>
    </div>
    <div class="space-y-3 text-sm text-slate-700">
      <p><span class="font-semibold text-slate-900">Bio:</span> <%= @mentor.bio.presence || 'Sem bio.' %></p>
      <p><span class="font-semibold text-slate-900">Contato:</span> <%= @mentor.contact_info %></p>
      <p><span class="font-semibold text-slate-900">Criado em:</span> <%= l @mentor.created_at, format: :short %></p>
    </div>
  </div>
  <div class="mt-6">
    <%= link_to 'Voltar', mentors_path, class: 'text-sm font-medium text-brand-600 hover:text-brand-700' %>
  </div>
</div>
