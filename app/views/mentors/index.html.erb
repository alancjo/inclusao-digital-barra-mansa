<%= breadcrumb(['InÃ­cio', root_path], ['Mentores', nil]) %>
<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold text-slate-900">Mentores</h1>
  <%= link_to 'Novo Mentor', new_mentor_path, class: 'inline-flex items-center rounded-md bg-brand-500 hover:bg-brand-600 text-white px-4 py-2 text-sm font-medium shadow' %>
</div>
<div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-3" data-animate-stagger>
  <% @mentors.each do |mentor| %>
    <div class="rounded-xl bg-white border border-slate-200 p-5 shadow-sm hover:shadow-md transition flex flex-col">
      <div class="flex items-start justify-between mb-2">
        <h3 class="font-semibold text-slate-900 text-base"><%= mentor.full_name %></h3>
        <% if mentor.availability.present? %>
          <span class="text-[10px] uppercase tracking-wide font-semibold bg-brand-100 text-brand-700 px-2 py-1 rounded"><%= mentor.availability %></span>
        <% end %>
      </div>
      <span class="inline-block text-[11px] font-bold tracking-wide bg-slate-900 text-white px-2 py-1 rounded mb-2"><%= mentor.expertise %></span>
      <p class="text-sm text-slate-600 flex-1"><%= mentor.bio.presence || 'Sem bio informada.' %></p>
      <p class="mt-3 text-xs text-slate-700 font-medium flex items-center gap-1"><span class="text-slate-400">ğŸ“§</span> <%= mentor.contact_info %></p>
      <div class="mt-4 flex gap-4 text-[11px] font-semibold">
        <%= link_to 'Ver', mentor_path(mentor), class: 'text-brand-600 hover:text-brand-700' %>
        <%= link_to 'Editar', edit_mentor_path(mentor), class: 'text-slate-600 hover:text-slate-800' %>
        <%= link_to 'Remover', mentor, data: { turbo_method: :delete, confirm: 'Tem certeza?' }, class: 'text-red-600 hover:text-red-700' %>
      </div>
    </div>
  <% end %>
  <% if @mentors.empty? %>
    <div class="col-span-full text-sm text-slate-500">Nenhum mentor cadastrado.</div>
  <% end %>
</div>
