<% flash.each do |type, message| %>
  <% color = case type.to_s
            when 'notice' then 'bg-brand-50 border-brand-200 text-brand-700'
            when 'alert', 'error' then 'bg-red-50 border-red-200 text-red-700'
            else 'bg-slate-50 border-slate-200 text-slate-700'
            end %>
  <div class="mb-4 border rounded-md px-4 py-3 text-sm flex items-start gap-2 <%= color %>" role="alert">
    <span><%= message %></span>
  </div>
<% end %>
