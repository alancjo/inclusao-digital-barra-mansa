<%= form_with(model: supporter, class: "space-y-6") do |f| %>
  <% if supporter.errors.any? %>
    <div class="rounded-md border border-red-200 bg-red-50 p-4">
      <h4 class="text-sm font-semibold text-red-700 mb-2"><%= pluralize(supporter.errors.count, 'erro') %> impediram o salvamento:</h4>
      <ul class="list-disc list-inside text-xs text-red-600 space-y-1">
        <% supporter.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="grid gap-6 sm:grid-cols-2">
    <div class="flex flex-col gap-1 sm:col-span-2">
      <%= f.label :name, class: 'text-xs font-semibold uppercase tracking-wide text-slate-600' do %>
        Nome <span class="text-red-500">*</span>
      <% end %>
      <%= f.text_field :name, required: true, class: "rounded-md border caret-brand-600 focus:border-brand-500 focus:ring-2 focus:ring-brand-500 focus:ring-offset-1 text-sm #{supporter.errors[:name].any? ? 'border-red-500' : 'border-slate-300'}" %>
    </div>
    <div class="flex flex-col gap-1">
      <%= f.label :support_type, class: 'text-xs font-semibold uppercase tracking-wide text-slate-600' do %>
        Tipo de apoio <span class="text-red-500">*</span>
      <% end %>
      <%= f.text_field :support_type, required: true, class: 'rounded-md border border-slate-300 caret-brand-600 focus:border-brand-500 focus:ring-2 focus:ring-brand-500 focus:ring-offset-1 text-sm' %>
    </div>
    <div class="flex flex-col gap-1">
      <%= f.label :contact_info, class: 'text-xs font-semibold uppercase tracking-wide text-slate-600' do %>
        Contato (email) <span class="text-red-500">*</span>
      <% end %>
      <%= f.email_field :contact_info, required: true, placeholder: 'email@exemplo.com', class: "rounded-md border caret-brand-600 focus:border-brand-500 focus:ring-2 focus:ring-brand-500 focus:ring-offset-1 text-sm #{supporter.errors[:contact_info].any? ? 'border-red-500' : 'border-slate-300'}" %>
    </div>
  </div>
  <div>
    <%= f.submit (supporter.persisted? ? 'Atualizar Apoiador' : 'Criar Apoiador'), class: 'inline-flex items-center rounded-md bg-slate-800 hover:bg-slate-700 text-white px-5 py-2 text-sm font-medium shadow' %>
  </div>
<% end %>
