<div class="max-w-xl">
  <div class="mb-6 flex items-center justify-between">
    <h1 class="text-2xl font-semibold text-slate-900"><%= @supporter.name %></h1>
    <%= link_to 'Editar', edit_supporter_path(@supporter), class: 'inline-flex items-center rounded-md bg-slate-800 hover:bg-slate-700 text-white px-3 py-2 text-sm font-medium' %>
  </div>
  <div class="rounded-xl bg-white border border-slate-200 p-6 shadow-sm space-y-3 text-sm text-slate-700">
    <p><span class="font-semibold text-slate-900">Tipo de apoio:</span> <%= @supporter.support_type %></p>
    <p><span class="font-semibold text-slate-900">Contato:</span> <%= @supporter.contact_info %></p>
    <p><span class="font-semibold text-slate-900">Criado em:</span> <%= l @supporter.created_at, format: :short %></p>
  </div>
  <div class="mt-6">
    <%= link_to 'Voltar', supporters_path, class: 'text-sm font-medium text-brand-600 hover:text-brand-700' %>
  </div>
</div>
